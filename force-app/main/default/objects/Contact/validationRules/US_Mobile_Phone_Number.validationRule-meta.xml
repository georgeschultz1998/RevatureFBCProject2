<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>US_Mobile_Phone_Number</fullName>
    <active>true</active>
    <description>Only allows US format phone numbers</description>
    <errorConditionFormula>!REGEX(  MobilePhone  , &quot;^((\\+1)?\\s?\\(\\d{3}\\)\\s?\\d{3}\\-\\d{4})?$&quot;)</errorConditionFormula>
    <errorDisplayField>MobilePhone</errorDisplayField>
    <errorMessage>Please enter a US Phone number</errorMessage>
</ValidationRule>
